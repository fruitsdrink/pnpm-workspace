{
  "name": "@pw/root",
  "private": true,
  "version": "0.1.0",
  "description": "pnpm workspace root",
  "author": "haight",
  "license": "MIT",
  "scripts": {
    "prepare": "husky",
    "cz": "cz",
    "__eslint_comment__": "查阅eslint文档 https://eslint.org/docs/latest/use/command-line-interface 了解cli工具的选项",
    "lint": "eslint ./ --ext .ts,.js,.json --max-warnings=0",
    "format": "prettier --config .prettierrc '.' --write",
    "format-watch": "onchange -d 1000 '**/*' -- prettier --config .prettierrc --write {{changed}}"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.1",
    "@types/node": "^20.11.17",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.2",
    "onchange": "^7.1.0",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
